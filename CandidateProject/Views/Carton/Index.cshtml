@model IEnumerable<CandidateProject.ViewModels.CartonViewModel>

@{
    ViewBag.Title = "Carton Index";
}

<h2>Carton Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CartonNumber)
        </th>
        <th>
            Number of Items
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CartonNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EquipmentCount) <!-- Display the equipment count -->
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                @Html.ActionLink("Add Equipment", "AddEquipment", new { id = item.Id }) |
                @Html.ActionLink("View Equipment", "ViewCartonEquipment", new { id = item.Id })
            </td>
        </tr>
    }
</table>
